@{
    Layout = null;
}

<!doctype html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Mojtaba Moein">
    <title>پرداخت اعتباری</title>
    <link rel="stylesheet" href="/Css/app.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="~/Js/jquery.tinymce.min.js"></script>

    <link href="~/Css/Ionicons.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href="~/Areas/Admin/Css/jquery-ui-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Css/jquery-ui.css" rel="stylesheet" />

    <link href="~/Css/DropDown/DropDownStyle.css" rel="stylesheet" />
	<link href="~/Areas/CustomerPaymentManager/PictureCss/ImageZoom.css" rel="stylesheet" />
    @RenderSection("header", false)
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="index2.html" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini">پنل</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>پنل خرید اعتباری</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <i class="fa fa-user"></i>
                                <span class="hidden-xs">پنل سفته ها  </span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <i style="font-size: 40px" class="fa fa-user"></i>
                                    <p>
                                        پنل سفته ها
                                        <small>پنل سفته ها</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">

                                    <div class="pull-left">
                                        <form action="/User/SignOut" method="post" id="formLogout">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" href="#" class="btn btn-default btn-flat">خروج</button>
                                        </form>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <!-- Control Sidebar Toggle Button -->
                    </ul>
                </div>
            </nav>
        </header>
        <!-- right side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-right image">
                        <i style="font-size: 40px;color:white" class="fa fa-user"></i>
                    </div>
                    <div class="pull-right info">
                        <p>پنل سفته هاا</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> آنلاین</a>
                    </div>
                </div>
                <!-- search form -->
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <form id="formLogout" method="post" action="/logout">
					<ul class="sidebar-menu" data-widget="tree">
						<li class="header">منو</li>
						<li>
							<a href="/CustomerPaymentManager/MyCreditPaymentRequests">
								<i class="fa fa-cart-arrow-down"></i> <span>درخواست ها</span>
								<span class="pull-left-container">
								</span>
							</a>
						</li>
						<li>
							<a href="/CustomerPaymentManager/MyPromissories">
								<i class="fa fa-cart-arrow-down"></i> <span>سفته های من</span>
								<span class="pull-left-container">
								</span>
							</a>
						</li>
						<li>
							<a href="/CustomerPaymentManager/Login/ShowCreditConditations">
								<i class="fa fa-cart-arrow-down"></i> <span>شرایط پرداخت اعتباری</span>
								<span class="pull-left-container">
								</span>
							</a>
						</li>
						<li>
							<a style="cursor:pointer" onclick="document.getElementById('formLogout').submit()">
								@Html.AntiForgeryToken()
								<i class="fa fa-sign-out"></i> <span>خروج</span>
								<span class="pull-left-container">
								</span>
							</a>
						</li>
					</ul>
                </form>
            </section>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                @RenderSection("headerContent", false)
            </section>
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <footer class="main-footer text-left"></footer>
    </div>

    <script src="/Js/app.js"></script>



    @RenderSection("footer", false)
</body>
</html>

<script src="~/Areas/Admin/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Areas/Admin/Scripts/jquery-ui.js"></script>
<script src="~/Areas/Admin/Scripts/PersianDateTimePicker/jquery-ui-datetimepicker.min.js"></script>
<script src="~/Areas/CustomerPaymentManager/Script/Common.js"></script>
<script src="~/Areas/Admin/Scripts/PriceWithCommas.js"></script>
