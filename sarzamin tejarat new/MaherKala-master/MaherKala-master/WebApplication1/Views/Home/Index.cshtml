@{
    Layout = "~/Views/Shared/Master.cshtml";
}
    <section class="main-slider">
        <div class="container">
            <div class="row">
                <div class="col-9">
                    <!-- main slider -->
                    <div class="main-slider__slider">
                        <div class="swiper-container">
                            <div class="swiper-wrapper">
                                <!-- main slider item -->
                                @{ var list = new WebApplication1.Models.DBContext().SiteSliders.OrderByDescending(p => p.Id).ToList();}
                                @for (int i = 0; i < list.Count; i++)
                                {
                                    <div class="swiper-slide">
                                        <a href="@list[i].Link" title=""><img src="@list[i].Image" title="" alt=""></a>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <!-- special banner -->
				
						<img src="~/image/WhatsAppimg.jpeg" style="border-radius:8px" />
		
					
                </div>
            </div>
        </div>
    </section>
    <section class="product product--slider product--special" >
        <div class="container">
            <div class="section-title">
                <!-- product slider title -->
                <h3>پیشنهاد ویژه</h3>
                <a href="#" title=""><i class="at-arrow-left"></i>بیشتر</a>
            </div>
        </div>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <!-- product slider item -->
					@foreach (var s in ViewBag.Special)
					{
				<div class="swiper-slide">
					<div class="product__item">
						<div class="product__image">
							<img src="@s.Product.Thumbnail" title="" alt="">
						</div>
						<div class="product__title">
							<h2>@s.Product.Name</h2>
						</div>
						@if (s.Product.Discount > 0)
						{
							<div class="product__price">
								<span class="product__price__old">@string.Format("{0:0,0}", s.Product.Price)<span>تومان</span></span>
								<span>@(String.Format("{0:0,0}", s.Product.Price - s.Product.Discount))<span>تومان</span></span>
							</div>
						}
						else
						{
							<div class="product__price">

								<span>@(String.Format("{0:0,0}", s.Product.Price - s.Product.Discount))<span>تومان</span></span>
							</div>
						}
						<div class="product__countdown">
							<span>
								@if (s.GetDays() == "0")
								{

									<b style="font-size:25px;margin-right:10px">

										همین امروز
									</b>
								}
								else
								{

									<b style="font-size:25px;margin-right:10px">

										@(s.GetDays())
									</b>

									<lable>روز دیگر</lable>
								}
							</span>
						</div>
					
						<a style="color:black" href="/Products/Index?Id=@s.Product.Id"></a>
					</div>

				</div>
					}

      
            </div>
        </div>
    </section>
    <section class="banner">
        <div class="container">
            <div class="row">
                @{
                    var db2 = new WebApplication1.Models.DBContext();
                    var banners2 = db2.Banners.Where(p => p.Type == 1).ToList();
                    int ii = 0;
                    foreach (var b in banners2)
                    {
                        if (ii == 0)
                        {
                            <div class="col-lg-6">
                                <div class="banner__item">

                                    <a href="@b.Link" title=""><img src="@b.Image" alt="" title="" style="width:100%;height:217px;border-radius:5px;"></a>
                                </div>
                            </div>

                        }
                        else
                        {
                            <div class="col-lg-6">
                                <div class="banner__item">

                                    <a href="@b.Link" title=""><img src="@b.Image" alt="" title="" style="width:100%;height:217px;border-radius:5px;"></a>
                                </div>
                            </div>
                 
                        }

                        ii++;
                    }
                }

            </div>
        </div>
    </section>
