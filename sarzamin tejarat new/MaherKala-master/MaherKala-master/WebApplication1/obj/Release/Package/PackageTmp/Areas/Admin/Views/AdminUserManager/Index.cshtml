@model IEnumerable<WebApplication1.Models.AdminUsers>

@{

    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
    WebApplication1.Models.DBContext dBContext = new WebApplication1.Models.DBContext();
    var ListRoles = dBContext.adminsRoles.ToList();
 
}

<div class="text-center" style="border-style:solid;">
    <h2 style="font-size:medium">مدیریت کاربران پلن مدیریت</h2>
</div>
<br />
<p>


<p>
    <a class="btn btn-success" href="/Admin/AdminUserManager/CreateAdmin">ثبت کاربر جدید</a>
</p>
<p class="text-success">
    @TempData["Sucess"]
</p>
<p class="text-danger">
    @TempData["Faild"]
</p>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover text-center">
                    <tr>
                        <th>
                            نام
                        </th>
                        <th>
                            نام خانوادگی
                        </th>
                        <th>
                            شماره همراه
                        </th>
                        <th>
                            نام کاربری
                        </th>
                        <th>
                            رمزعبور
                        </th>
                        <th>
                            عملیات
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mobile)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                               
                              <a  class="btn btn-primary"  href="/Admin/AdminUserManager/AdminRoles/@item.Id"> تخصیص نقش</a>
                                <a class="btn btn-danger" href="/Admin/AdminUserManager/RemoveAdmin/@item.Id"> حذف کاربر</a>
                            </td>

                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>


<script>
    function GetUserId(id) {
        $('#UserId').val(id);
  

    }
</script>