@model WebApplication1.Models.AdminUsers

@{
    ViewBag.Title = "RemoveAdmin";
    Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body table-responsive no-padding">

                <div class="text-center text-danger" style="border-style:solid;">
                    <h2>حذف کاربر</h2>
                </div>
                <br />





                <div style="margin-right:5px;margin-bottom:5px">

                    <h3 class="text-blue" style="margin-right:15px">آیا مایل به انجام عملیات هستید?</h3>


                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger" /> |

                        <a class="btn btn-warning" href="/Admin/AdminUserManager/Index"> انصراف</a>
                        <p class="text-danger" style="margin-right:10px;">
                            @TempData["ErrorRemoveAdmin"]
                        </p>
                    </div>
                }
            </div>



        </div>
    </div>
</div>
