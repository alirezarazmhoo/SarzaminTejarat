@model IEnumerable<WebApplication1.Models.CartSharjType>

@{
	ViewBag.Title = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_Master.cshtml";
}

<div class="text-center" style="border-style:solid;">
	<h2 style="font-size:medium"> تعریف نوع کارت شارژ </h2>
</div>
<br />
<p>


<p>

	<a class="btn btn-success" href="/Admin/CartSharjTypes/Create">ثبت جدید</a>
</p>
<div class="row">
	<div class="col-xs-12">
		<div class="box">
			<div class="box-body table-responsive no-padding">
				<table class="table table-hover text-center">
					<tr>

						<th>
							نوع
						</th>
						<th>
							تصویر
						</th>
						<th>
							امکانات
						</th>
					</tr>

					@foreach (var item in Model)
					{
				<tr>

					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						<img style="width:60px;height:70px;" src="~/Upload/CartSharType/@item.ImageUrl"/>
	
					</td>
					<td>
						<a class="btn btn-danger" href="/Admin/CartSharjTypes/Delete/@item.Id"> حذف</a>
						<a class="btn btn-primary" href="/Admin/CartSharjTypes/Edit/@item.Id"> ویرایش</a>
					</td>
				</tr>
					}

				</table>
</div>
</div>
</div>
