@model WebApplication1.Models.CreditPaymentRequestAttemp

@{
	ViewBag.Title = "Details";
	Layout = "~/Areas/CustomerPaymentManager/Views/Shared/_CreditMaster.cshtml";
}
<div class="row">
	<div class="col-xs-12">
		<div class="box">


			<div class="text-center text-blue" style="border-style:solid;">
				<h2>جزییات </h2>
			</div>
			<div class="box zmdi-border-color" style="height:auto">
				<div class="box-body table-responsive no-padding">
					<div class="text text-center">
						<h3>جزییات شرط</h3>
					</div>
					<label style="margin-right:10px;margin-top:20px;">توضیحات :</label>

					<div style="width:50%;margin-right:5px;background-color:cornsilk;border-radius:8px">
						<text style="margin-right:10px;">
							@ViewBag.Description
						</text>
					</div>
					<hr />
					<label style="margin-right:10px;margin-top:20px;">مبلغ سفته :</label>
					<div style="width:50%;margin-right:5px;background-color:cornsilk;border-radius:8px">
						<text style="margin-right:10px;">
							@ViewBag.checkprice تومان
						</text>
					</div>
					<hr />
					<label style="margin-right:10px;margin-top:20px;"> درصد کارمزد:</label>
					<div style="width:50%;margin-right:5px;background-color:cornsilk;border-radius:8px">
						<text style="margin-right:10px;">
							@ViewBag.Interestrate درصد
						</text>
					</div>
					<hr />

					<label style="margin-right:10px;margin-top:20px;"> مبلغ اولیه پرداخت :</label>
					<div style="width:50%;margin-right:5px;background-color:cornsilk;border-radius:8px">
						<text style="margin-right:10px;">
							@ViewBag.InitialPayment تومان
						</text>
					</div>
					<hr />

					<label style="margin-right:10px;margin-top:20px;">نوع:</label>
					<div style="width:50%;margin-right:5px;background-color:cornsilk;border-radius:8px">
						@if (ViewBag.Type == WebApplication1.Models.CreditPayType.Bronze)
						{
							<p style="margin-right:10px;">
								برنزی
							</p>

						}
						@if (ViewBag.Type == WebApplication1.Models.CreditPayType.Silver)
						{
							<p style="margin-right:10px;">
								نقره ای
							</p>

						}
						@if (ViewBag.Type == WebApplication1.Models.CreditPayType.Gold)
						{
							<p style="margin-right:10px;">
								طلایی
							</p>

						}
					</div>
				</div>
			</div>

			<div class=" row">
				<div class="col-md-offset-2 col-md-10 " style="height:400px;">
					<div class="text-center text-aqua" style="border-style:solid;height:30px;margin-left:100px;width:90%">
						<p style="margin-bottom:10px;font-size:medium">تصاویر آپلود شده</p>
					</div>

					<div class="row">

						@foreach (var item in ViewBag.ImageUrl)
						{
							<img src="~/@item.ImageUrl" class="image zoom" style="width:80px;height:70px;margin-top:5px;cursor:pointer;margin-bottom:20px;">
						}
					</div>
				</div>
			</div>
			<div class="box zmdi-border-color" style="height:auto">
				<div class="box-body table-responsive no-padding">
					<div class="text text-center">
						<h3>نتیجه درخواست</h3>
					</div>
					<label style="margin-right:10px;margin-top:20px;"> نظر ادمین :</label>

					<div style="width:50%;margin-right:5px;background-color:cornsilk;border-radius:8px;margin-bottom:5px">
						<text style="margin-right:10px;margin-bottom:5px">
							@ViewBag.AdminComment
						</text>
					</div>
					<label style="margin-right:10px;margin-top:20px;">وضعیت:</label>

					<div style="width:20%;margin-right:5px;background-color:cornsilk;border-radius:8px;margin-bottom:5px">
						@if (Model.CreditPaymentRequestAttempStatus == WebApplication1.Models.CreditPaymentRequestAttempStatus.Confirm)
						{
							<p class="text text-success">
								تایید شده
							</p>
						}
						@if (Model.CreditPaymentRequestAttempStatus == WebApplication1.Models.CreditPaymentRequestAttempStatus.Rejected)
						{
							<p class="text text-danger">
								تایید نشده
							</p>
						}
						@if (Model.CreditPaymentRequestAttempStatus == WebApplication1.Models.CreditPaymentRequestAttempStatus.Waiting)
						{
							<p class="text text-warning">
								درحال برسی
							</p>
						}

					</div>


				</div>
			</div>

		</div>
		<p>
			@if (Model.CreditPaymentRequestAttempStatus != WebApplication1.Models.CreditPaymentRequestAttempStatus.Confirm)
			{
				@Html.ActionLink("ویرایش", "Edit", new { id = Model.Id, @class = "btn btn-primary" })
			}
			| @Html.ActionLink("بازگشت", "Index", new { @class = "btn btn-primary" })
		</p>
	</div>
</div>